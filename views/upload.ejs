<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Upload to SnapVerse</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <style>
    body {
      background: #0f2027;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .upload-box {
      width: 100%;
      max-width: 450px;
      background: rgba(255,255,255,0.06);
      padding: 35px;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0,0,0,0.4);
      text-align: center;
    }

    .form-control {
      background: rgba(255,255,255,0.15);
      border: none;
      color: #fff;
    }

    .form-control::placeholder {
      color: #ccc;
    }

    .btn-upload {
      background-color: #4dd0e1;
      border: none;
      font-weight: 600;
      color: #003b46;
      padding: 12px;
      border-radius: 10px;
      width: 100%;
    }

    .btn-upload:hover {
      background-color: #3bc0d1;
    }

    .back-link {
      margin-top: 20px;
      display: block;
      color: #ccc;
      text-decoration: none;
    }
  </style>
</head>

<body>

  <!-- Consumer Block -->
  <% if (user && user.role === "consumer") { %>
    <script>
      alert("Consumers cannot upload photos.");
      window.location.href = "/";
    </script>
  <% } %>

  <div class="upload-box">
    <h2><i class="bi bi-cloud-upload"></i> Upload to SnapVerse</h2>

    <form action="/upload" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <input type="text" name="caption" class="form-control" placeholder="Write a caption..." required />
      </div>

      <div class="mb-3">
        <input type="file" name="photo" class="form-control" accept="image/*" required />
      </div>

      <button type="submit" class="btn btn-upload">Upload</button>
    </form>

    <a href="/" class="back-link">&lt; Back to Feed</a>
  </div>
</body>
</html>
