            <textarea name="caption" class="form-control mb-2" placeholder="Caption"></textarea>
            <input type="text" name="location" class="form-control mb-3" placeholder="Location">
            <button class="btn btn-primary w-100">Upload</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

