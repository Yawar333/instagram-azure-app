<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Instagram Clone</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">ğŸ“¸ Instagram Clone</a>

    <div>
      <% if (!user) { %>
        <a href="/login" class="btn btn-outline-light me-2">Login</a>
        <a href="/signup" class="btn btn-outline-light">Signup</a>
      <% } else { %>
        <span class="text-white me-3">Hi, <%= user.username %></span>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h3 class="text-center mb-4">Photo Feed</h3>

  <% if (user && user.role === 'creator') { %>
    <div class="text-center mb-4">
      <a href="/upload" class="btn btn-primary">Upload New Image</a>
    </div>
  <% } %>

  <div class="row">
    <% if (images.length === 0) { %>
      <p class="text-center">No images uploaded yet.</p>
    <% } %>

    <% images.forEach(image => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <img src="<%= image.path %>" class="card-img-top">

          <div class="card-body">
            <h6 class="fw-bold"><%= image.title %></h6>
            <p><%= image.caption %></p>
            <p class="text-muted">ğŸ“ <%= image.location %></p>
            <p class="text-muted">Uploaded by <strong><%= image.user %></strong></p>
            <button class="btn btn-sm btn-outline-danger">â¤ï¸ Like</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

</body>
</html>
