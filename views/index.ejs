<!DOCTYPE html>
<html>
<head>
  <title>SnapVerse</title>
  <style>
    body {
      background: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);
      color: white;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .container {
      padding: 40px 20px;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 10px;
    }

    .tagline {
      font-size: 1.2rem;
      margin-bottom: 30px;
      color: #ccc;
    }

    .auth-buttons {
      margin-bottom: 40px;
    }

    .auth-buttons a {
      margin: 0 10px;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
    }

    .btn-primary {
      background-color: #007bff;
      color: white;
      border: none;
    }

    .btn-outline-light {
      border: 2px solid white;
      color: white;
    }

    /* Feed wrapper like Instagram/Facebook */
    .feed {
      margin-top: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;  /* center the column */
    }

    .feed h2 {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    /* Single centered column, fixed width */
    .feed-list {
      width: 100%;
      max-width: 600px; /* like IG/Facebook post width */
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .post {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
      text-align: left;
    }

    .post-header {
      font-weight: bold;
      margin-bottom: 10px;
      font-size: 0.95rem;
      color: #eee;
    }

    /* More realistic image style */
    .post img {
      width: 100%;
      max-height: 400px;   /* donâ€™t let it be huge */
      object-fit: cover;   /* crop nicely */
      border-radius: 8px;
      margin-bottom: 10px;
      cursor: pointer;
      transition: transform 0.2s ease;
      display: block;
    }

    .post img:hover {
      transform: scale(1.02);
    }

    .post-caption {
      margin-bottom: 5px;
      font-size: 0.95rem;
    }

    .post-meta {
      font-size: 0.8rem;
      color: #bbb;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>SnapVerse</h1>
    <p class="tagline">Capture your world. Share your story. Join the Verse.</p>

    <% if (user) { %>
      <h2>Welcome, <%= user.username %>!</h2>

      <div class="auth-buttons">
        <a href="/upload" class="btn-primary">Upload Photo</a>
        <a href="/logout" class="btn-outline-light">Logout</a>
      </div>

    <% } else { %>
      <div class="auth-buttons">
        <a href="/login" class="btn-primary">Login</a>
        <a href="/signup" class="btn-outline-light">Create Account</a>
      </div>
    <% } %>

    <div class="feed">
      <h2>Live Feed</h2>
      <div class="feed-list">
        <% images.forEach(image => { %>
          <div class="post">
            <div class="post-header">
              <%= image.user %>
            </div>
            <a href="<%= image.path %>" target="_blank">
              <img src="<%= image.path %>" alt="SnapVerse post" />
            </a>
            <p class="post-caption"><%= image.caption %></p>
            <div class="post-meta">Tap image to view full size</div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
