<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>SnapVerse | Capture Life. Share Stories.</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

  <style>
    body {
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      min-height: 100vh;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
    }

    .left-panel {
      padding: 50px;
    }

    .brand-title {
      font-size: 3rem;
      font-weight: 700;
    }

    .tagline {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 30px;
    }

    .right-panel {
      background-color: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(10px);
      padding: 40px;
      border-radius: 20px;
      height: 100vh;
      overflow-y: auto;
    }

    .card {
      background-color: rgba(255, 255, 255, 0.1);
      border: none;
      border-radius: 15px;
      margin-bottom: 20px;
      color: #fff;
    }

    .card img {
      border-radius: 15px 15px 0 0;
      max-height: 300px;
      object-fit: cover;
      width: 100%;
    }

    .icon-bar {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
      font-size: 1.1rem;
    }
  </style>
</head>

<body>
  <div class="container-fluid">
    <div class="row">

      <!-- LEFT SIDE -->
      <div class="col-md-6 left-panel d-flex flex-column justify-content-center">
        <h1 class="brand-title mb-2"><i class="bi bi-camera-fill"></i> SnapVerse</h1>
        <p class="tagline">Capture your world. Share your story. Join the Verse.</p>

        <% if (user) { %>
          <h4 class="mb-3">Welcome, <%= user.username %> ðŸ‘‹</h4>
          <a href="/upload" class="btn btn-primary w-50 mb-3">Upload Photo/Video</a>
          <a href="/logout" class="btn btn-outline-light w-50">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-primary w-50 mb-3">Login</a>
          <a href="/signup" class="btn btn-outline-light w-50">Create Account</a>
        <% } %>
      </div>

      <!-- RIGHT SIDE FEED -->
      <div class="col-md-6 right-panel">
        <h4 class="mb-4">Live Feed Preview</h4>

        <% images.forEach(img => { %>
          <div class="card">
            <img src="<%= img.path %>" class="card-img-top" />
            <div class="card-body">
              <h5>@<%= img.user %></h5>
              <p><%= img.caption %></p>
              <div class="icon-bar">
                <span><i class="bi bi-heart-fill text-danger"></i> 0</span>
                <span><i class="bi bi-chat-dots"></i> 0 comments</span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
